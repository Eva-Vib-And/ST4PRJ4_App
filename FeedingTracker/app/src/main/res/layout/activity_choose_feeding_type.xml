<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseFeedingType"
    android:layout_gravity="center">

    <RadioGroup
        android:id="@+id/RadioGruop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/aligmnet_slecetor">


        <RadioButton
            android:id="@+id/rightBreast"
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:background="@drawable/bra2_left2"
            android:button="@null"
            android:onClick="userChoseFeedingType"/>

        <RadioButton
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:background="@drawable/bra2_right"
            android:button="@null"
            android:id="@+id/leftBreast"
            android:onClick="userChoseFeedingType"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bottle"

            />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>