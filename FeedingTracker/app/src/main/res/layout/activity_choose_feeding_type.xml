<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseFeedingType"
    >


    <RadioGroup
        android:id="@+id/RadioGruop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.376">


        <RadioButton
            android:id="@+id/rightBreast"
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:background="@drawable/left_breast_selector"
            android:button="@null"
            android:onClick="userChoseFeedingType" />

        <RadioButton
            android:id="@+id/leftBreast"
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:background="@drawable/right_breast_slecetor"
            android:button="@null"
            android:onClick="userChoseFeedingType" />

        <RadioButton
            android:id="@+id/bottle"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:background="@drawable/ic_baby_bottle"
            android:button="null" />
    </RadioGroup>

    <Button
        android:id="@+id/next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ic_baseline_play_arrow_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </Button>




</androidx.constraintlayout.widget.ConstraintLayout>