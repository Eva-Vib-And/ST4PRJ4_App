<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OverviewAcitivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="62dp"
            android:layout_marginBottom="192dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.193">


        </com.github.mikephil.charting.charts.BarChart>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/barChart"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-31dp"
            android:layout_marginEnd="85dp"
            android:layout_marginBottom="43dp"
            android:text="@string/overviewInfoText"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />




    </RelativeLayout>


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/imageViewBreast"
        app:layout_constraintTop_toBottomOf="@+id/imageViewBreast"
        app:srcCompat="@drawable/ic_feeding_bottle_svgrepo_com" />

    <TextView
        android:id="@+id/numberOfBreastTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="70dp"
        android:text="@string/offeredBreast"
        app:layout_constraintStart_toEndOf="@+id/imageViewBreast"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <TextView
        android:id="@+id/totalNumberTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/TotalText"
        app:layout_constraintStart_toStartOf="@+id/relativeLayout"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <ImageView
        android:id="@+id/imageViewBreast"
        android:layout_width="50dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/totalNumberTxt"
        app:layout_constraintTop_toBottomOf="@+id/totalNumberTxt"
        app:srcCompat="@drawable/ic_breast_feeding_svgrepo_com" />

    <TextView
        android:id="@+id/offeredBottleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="140dp"
        android:text="@string/OfferedBottleText"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="366dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

